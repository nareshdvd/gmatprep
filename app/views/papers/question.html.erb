<%= simple_form_for [@paper, @paper_question], url: papers_question_answer_path, html: {class: "form-horizontal candidate-question-form height-100"} do |f| %>
  <%= render "papers/question_inner", {f: f} %>
<% end %>
<%= content_for :bottom_js do %>
  <script type="text/javascript">
    var seconds_elapsed = parseInt("<%= (@paper_question.paper.start_time + (Paper::MINUTES).minutes) - Time.now %>");
    $(document).on('load turbolinks:load', function(){
      $(".submit-btn").show();
      $(".wait-btn").hide();
      if($(".candidate-question-form").length != 0){
        window.timer_interval = setInterval(function(){set_time()}, 1000);
      }
    });
  </script>
<% end %>
