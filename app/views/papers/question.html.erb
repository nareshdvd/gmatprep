<script type="text/javascript">
  var seconds_elapsed = parseInt("<%= (@paper_question.paper.start_time + (Paper::MINUTES).minutes) - Time.now %>");
  $(document).on('load turbolinks:load', function(){
    if($(".candidate-question-form").length != 0){
      window.timer_interval = setInterval(function(){set_time()}, 1000);
    }
  });
</script>
<%= simple_form_for @paper_question, url: papers_question_answer_path, html: {class: "form-horizontal candidate-question-form"} do |f| %>
  <div class="row">
    <div class="col-sm-12 padding-t-5 padding-b-5 color-white">
      <b class="color-white padding-l-5 pull-left">Test Exam 1</b>
      <div class="pull-right">
        <b>Level</b> : <b><%= @paper_question.question.level %></b>
        <b>Category</b> : <b><%= @paper_question.question.category %></b>
      </div>
    </div>
  </div>
  <div class="row bold color-white">
    <div class="col-sm-12">
      <div class="bg-light-blue container-fluid">
        <div class="row">
          <div class="col-sm-6">
            <div class="pull-left">
              <span>
                Question <%= @paper_question.question_number %> of <%= Paper::QUESTION_COUNT%>
              </span>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="pull-right">
              <span style="">
                Time Reamining
              </span>
              <span id="timer" style="">
                <%= @paper_question.paper.formatted_remaining_time %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if @paper_question.passage_question? %>
    <%= render partial: "papers/passage_question", locals: {f: f} %>
  <% else %>
    <%= render partial: "papers/question", locals: {f: f} %>
  <% end %>
  <div class="row" style="bottom: 0px;">
    <div class="col-sm-12">
      <div class="bg-light-blue padding-5">
        <a class="btn btn-sm btn-primary" href="#">Help</a>
        <button type="submit" class="btn btn-sm btn-primary pull-right">Next</button>
      </div>
    </div>
  </div>
<% end %>
