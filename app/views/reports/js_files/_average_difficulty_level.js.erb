function difficulty_text(difficulty){
  difficulty = parseFloat(difficulty.toFixed(1))
  if(difficulty >= 3 && difficulty <= 3.5){
    return "HIGH"
  }
  else if(difficulty >= 2.5 && difficulty <= 2.9){
    return "MEDIUM HIGH"
  }
  else if(difficulty >= 1.5 && difficulty <= 2.4){
    return "MEDIUM"
  }
  else{
    return "LOW"
  }
}
