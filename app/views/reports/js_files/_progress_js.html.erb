<script type="text/javascript">
  var container = $("#progress-graph")[0];
  Highcharts.chart(container, {
    chart:{
      type: 'spline',
      backgroundColor: chart_background,
      margin: 1
    },
    rangeSelector: {
      selected: 1
    },
    title: {
      text: 'Progress chart'
    },
    xAxis: {
      categories: JSON.parse("<%= (1..41).to_a.to_json %>"),
      lineColor: line_color,
      lineWidth: 1,
    },
    yAxis: {
      gridLineColor: '#eee',
      lineColor: line_color,
      lineWidth: 1,
    },
    plotOptions: {
      series: {
        enableMouseTracking: false,
        shadow: false, 
        animation: false
      },
      spline: {
        lineWidth: 2,
        states: {
          hover: {
            lineWidth: 3
          }
        },
        marker: {
          enabled: false
        },
        color: bar_colors[1][0]
      }
    },
    series: [{
      name: 'Progress',
      data: JSON.parse("<%=raw @paper.get_chart_data.to_json %>"),
      type: 'spline',
      tooltip: {
        valueDecimals: 2
      }
    }]
  });
</script>
