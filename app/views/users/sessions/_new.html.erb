<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"}) do |f| %>
  <div class="">
    <label>Email</label>
    <%= f.text_field :email, required: false, autofocus: true, class: "", placeholder: "Email" %>
  </div>
  <div class="">
    <label>Password</label>
    <%= f.password_field :password, required: false, class: "", placeholder: "Password" %>
  </div>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  <div class="">
    <%= f.button :submit, "Log in", class: "btn btn-default bold" %>
  </div>
  <div class="shared-links">
    <%= render "users/shared/links" %>
  </div>
<% end %>
