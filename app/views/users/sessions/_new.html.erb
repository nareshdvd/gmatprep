<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"}) do |f| %>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.text_field :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, required: false, class: "form-control", placeholder: "Password" %>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-default bold" %>
  </div>
  <div class="shared-links">
    <%= render "users/shared/links" %>
  </div>
<% end %>
