<div class="auth-container">
  <div class="auth-text">
    Sign up to assess how you are doing with your preparation.
  </div>
  <%= render "users/sessions/social_logins" %>
  <div class="auth-form-container">
    <div class="support text-center">or Sign Up with Email</div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "auth-form"}) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password", label: false %>
      <%= f.input :password_confirmation, required: true, placeholder: "Re-Type Password", label: false %>
      <button type="submit" class="btn btn-default auth-btn signup-btn">
        Create Account
      </button>
    <% end %>
  </div>
</div>