<div class="auth-container">
  <div class="auth-text">
    Forgot your password?
  </div>
  <div class="auth-form-container">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "auth-form" }) do |f| %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      <button type="submit" class="btn btn-default auth-btn signup-btn">
        Send me reset password instructions
      </button>
    <% end %>
  </div>
</div>