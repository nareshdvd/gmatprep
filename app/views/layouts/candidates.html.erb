<!DOCTYPE html>
<html>
  <head>
    <title>Gmatprep</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="">
    <%= render "shared/navbar" %>
    <div class="container-fluid">
      <% if notice || alert %>
        <div class="row">
          <div class="col-sm-12">
            <% if notice %>
              <p class="notice alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="alert alert-success"><%= alert %></p>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-sm-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>