<% if notice || alert %>
  <div class="row margin-b-10">
    <div class="col-sm-12">
      <% if notice %>
        <div class="notice alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-success"><%= alert %></div>
      <% end %>
    </div>
  </div>
<% end %>