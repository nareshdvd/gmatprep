<div class="row">
  <%= render "candidates/sidebar", {active: ""} %>
  <div class="col-sm-8">
    <div class="candidate-content">
      <div class="row">
        <div class="col-sm-12">
          <div class="welcome-msg width-100 font-18">
            Thank you for your payment of <%= @payment.currency %> <%= @payment.amount %>. Your transaction has been completed, and a receipt for your purchase has been emailed to you.
            <% if @payment_method.is_a?(PaypalPaymentMethod) %>
              You may log into your account at www.paypal.com to view details of this transaction.
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>